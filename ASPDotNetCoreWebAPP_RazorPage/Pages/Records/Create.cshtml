@page
@model ASPDotNetCoreWebAPP_RazorPage.Pages.Records.CreateModel
@{
}
<br>
<h2>New Client</h2>

@if (Model.errorMsg.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMsg</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">

        </button>
    </div>
}

<form method="POST">

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Patient name</label>
        <div class="row mb-6">
            <input type='text' class="form-control" name="name" value="@Model.recordInfo.name"></input>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Appointment date</label>
        <div class="row mb-6">
            <input type="date" class="form-control" name="appointmentDate" value="@Model.recordInfo.appointmentDate">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Comments</label>
        <div class="row mb-6">
            <input ype='text' class="form-control" name="adminComment" value="@Model.recordInfo.adminComment"></input>
        </div>
    </div>
    @if (Model.successMsg.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMsg</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    </button>
                </div>
            </div>
        </div>
       
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </div>

</form>